{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["DEV"],
  "tasks": {
    "build": {
      "env": ["HOSTNAME", "PORT", "MONGO_URI", "JWT_SECRET", "JWT_ALG", "JWT_EXPIRATION", "GRAPHQL_ENDPOINT"],
      "outputs": ["dist/**", "build/**"]
    },
    "start": {
      "env": ["HOSTNAME", "PORT", "MONGO_URI", "JWT_SECRET", "JWT_ALG", "JWT_EXPIRATION", "GRAPHQL_ENDPOINT"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "lint": {},
    "dev": {
      "env": ["HOSTNAME", "PORT", "MONGO_URI", "JWT_SECRET", "JWT_ALG", "JWT_EXPIRATION", "GRAPHQL_ENDPOINT"],
      "persistent": true,
      "cache": false
    }
  }
}
